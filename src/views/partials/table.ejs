<div class="flex-1 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 py-6">
        <div class="bg-dark-800 rounded-lg shadow-lg overflow-hidden">
            <!-- Table Header -->
            <div class="bg-dark-700 px-4 py-3 border-b-[5px] border-dark-600 sticky top-0 z-30">
                <div class="flex items-center justify-between">
                    <h2 class="text-lg font-semibold text-gray-200">
                        <i class="fas fa-table mr-2"></i><%= tableTitle %>
                    </h2>
                    <!-- Extra slot -->
                    <% if (typeof extraContent !== 'undefined') { %>
                    <%- extraContent %>
                    <% } %>
                    <div class="flex items-center space-x-2">
                        <div class="text-sm text-gray-400 mr-10">
                            Selected: <span id="selectedCount">0</span> rows
                        </div>
                        <span class="text-sm text-gray-400">Total: <span id="totalCount">0</span> rows</span>
                        <button id="refreshBtn"
                            class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-2 rounded-lg transition-colors duration-200">
                        <i class="fas fa-sync-alt"></i>
                        </button>
                    </div>
                </div>
            </div>
            <!-- Table -->
            <div class="table-container">
                <table class="w-full">
                    <thead class="bg-dark-700 sticky top-0 z-20">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                                <input type="checkbox" id="selectAllCheckbox"
                                    class="w-4 h-4 bg-dark-600 border-dark-500 rounded focus:ring-blue-500 text-blue-600">
                            </th>
                            
                            <% headers.forEach(header => { %>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                                <%= header %>
                            </th>
                            <% }); %>

                            <% if (showActions) { %>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                                Actions
                                </th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody id="proxyTableBody">
                        <% if (data && data.length > 0) { %>
                            <% data.forEach(row => { %>
                            <tr>
                                <td class="px-4 py-2 border-b border-dark-600">
                                <input type="checkbox" class="rowCheckbox w-4 h-4 text-blue-600 rounded">
                                </td>

                                <% headers.forEach(h => { %>
                                <td class="px-4 py-2 border-b border-dark-600">
                                    <%= row[h.toLowerCase()] %>
                                </td>
                                <% }); %>

                                <% if (showActions) { %>
                                <td class="px-4 py-2 border-b border-dark-600 space-x-2">
                                    <button class="bg-blue-600 py-1 px-4 rounded-lg hover:bg-blue-700" onclick="editRow(this)">Edit</button>
                                    <button class="bg-red-600 py-1 px-4 rounded-lg hover:bg-red-700" onclick="deleteRow(this)">Delete</button>
                                </td>
                                <% } %>
                            </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <!-- Empty State -->
            <div id="emptyState" class="py-12 text-center">
                <i class="fas fa-server text-4xl text-gray-500 mb-4"></i>
                <p class="text-gray-400"><%= emptyMessage %></p>
            </div>
        </div>
    </div>
</div>