<div class="flex-1 overflow-hidden text-xs sm:text-sm">
    <div class="max-w-7xl mx-auto px-4 py-3">
        <div class="bg-dark-800 rounded-lg shadow-lg scrollbar-dark">
            <!-- Table Header -->
            <div class="bg-dark-700 px-4 py-3 border-b-[5px] border-dark-600 sticky top-0 z-30">
                <div class="flex items-center justify-between">
                    <h2 class="text-sm sm:text-lg font-semibold text-gray-200">
                        <i class="fas fa-table mr-2"></i><%= tableTitle %>
                    </h2>
                    <!-- Extra slot -->
                    <div class="flex gap-5 text-xs sm:text-sm items-center">
                        <span class=" text-gray-400 whitespace-nowrap">
                            Selected:
                            <span id="selectedCount">0</span> rows
                        </span>
                        <span class=" text-gray-400 whitespace-nowrap">
                            Total:
                            <span id="totalCount">0</span> rows
                        </span>
                        <button id="refreshBtn"
                            class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-2 rounded-lg transition-colors duration-200">
                        <i class="fas fa-sync-alt"></i>
                        </button>
                    </div>
                </div>
            </div>
            <!-- Table -->
            <div class="table-container overflow-x-auto">
                <table class="table-auto w-full">
                    <thead class="bg-dark-700 sticky top-0 z-20">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                                <input type="checkbox" id="selectAllCheckbox"
                                    class="w-4 h-4 bg-dark-600 border-dark-500 rounded focus:ring-blue-500 text-blue-600">
                            </th>
                            
                            <% headers.forEach(header => { %>
                                <th class="<%= header === 'note' ? 'w-full' : 'min-w-fit' %> px-4 py-3 text-center font-medium text-gray-300 uppercase tracking-wider">
                                    <div class="relative flex flex-col gap-1 min-w-15">
                                        <%= header %>
                                        <input type="text" class="<%= header === 'note' || header === 'ip' || header === 'ip:port' ? 'text-left' : 'text-center' %> filter-input mt-1" placeholder="Filter">
                                    </div>
                                </th>
                            <% }); %>

                            <% if (showActions) { %>
                                <th class="px-4 py-3 text-left font-medium text-gray-300 uppercase tracking-wider">
                                Actions
                                </th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <% if (data && data.length > 0) { %>
                            <% data.forEach(row => { %>
                            <tr class="transition-colors duration-200 hover:bg-dark-750 cursor-pointer">
                                <td class="px-4 py-2 border-b border-dark-600">
                                    <input type="checkbox" class="rowCheckbox w-4 h-4 text-blue-600 rounded">
                                </td>

                                <% headers.forEach(h => { %>
                                <td class="px-4 py-2 border-b border-dark-600">
                                    <%= row[h.toLowerCase()] %>
                                </td>
                                <% }); %>

                                <% if (showActions) { %>
                                <td class="px-4 py-2 border-b border-dark-600 space-x-2">
                                    <button class="bg-blue-600 py-1 px-4 rounded-lg hover:bg-blue-700" onclick="editRow(this)">Edit</button>
                                    <button class="bg-red-600 py-1 px-4 rounded-lg hover:bg-red-700" onclick="deleteRow(this)">Delete</button>
                                </td>
                                <% } %>
                            </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <!-- Empty State -->
            <div id="emptyState" class="py-12 text-center">
                <% if (typeof emptyMessage !== 'undefined') { %>
                    <%- emptyMessage %>
                <% } %>
            </div>
        </div>
    </div>
</div>