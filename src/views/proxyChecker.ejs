<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proxy Checker</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="css/style.css">
    <style>
        .scrollbar-hide::-webkit-scrollbar {
            display: none;
        }

        .scrollbar-hide {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

        .table-container {
            scrollbar-width: thin;
            scrollbar-color: #475569 #0f172a;
        }

        .table-container::-webkit-scrollbar {
            width: 6px;
            height: 6px;
        }

        .table-container::-webkit-scrollbar-track {
            background: #0f172a;
        }

        .table-container::-webkit-scrollbar-thumb {
            background: #475569;
            border-radius: 3px;
        }

        .table-container::-webkit-scrollbar-thumb:hover {
            background: #64748b;
        }

        /* Custom scrollbar for textarea */
        textarea {
            scrollbar-width: thin;
            scrollbar-color: #475569 #1e293b;
        }

        textarea::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        textarea::-webkit-scrollbar-track {
            background: #1e293b;
            border-radius: 4px;
        }

        textarea::-webkit-scrollbar-thumb {
            background: #475569;
            border-radius: 4px;
            border: none;
        }

        textarea::-webkit-scrollbar-thumb:hover {
            background: #64748b;
        }

        /* Navbar styles */
        .navbar {
            background-color: #1e293b;
            border-bottom: 1px solid #334155;
        }

        .nav-link {
            color: #cbd5e1;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #f8fafc;
        }

        .nav-link.active {
            color: #60a5fa;
            font-weight: 500;
        }

        .nav-link.active:hover {
            color: #93c5fd;
        }

        /* Footer styles */
        .footer {
            background-color: #1e293b;
            border-top: 1px solid #334155;
        }

        .social-icon {
            transition: transform 0.2s ease, color 0.2s ease;
        }

        .social-icon:hover {
            transform: translateY(-3px);
            color: #60a5fa;
        }

        /* Selection buttons container */
        .selection-buttons {
            display: none;
            /* Hidden by default */
            display: flex;
        }

        .selection-buttons.visible {
            display: flex;
            /* Show when table has data */
        }
    </style>
</head>

<body class="bg-dark-900 text-white font-sans">
    <!-- Navbar -->
    <%- include('partials/navbar', { currentPage: 'Proxy Checker' }) %>
    <!-- Status Display -->
    <div id="statusDisplay" class="fixed top-16 right-4 z-50 hidden">
        <div class="bg-green-500 text-white px-4 py-2 rounded-lg shadow-lg">
            <span id="statusMessage"></span>
        </div>
    </div>

    <!-- Main Container -->
    <div class="min-h-screen flex flex-col pt-2">
        <!-- Fixed Top Controls -->
        <div class="bg-dark-800 border-b border-dark-600 sticky top-16 z-40 shadow-lg">
            <div class="max-w-7xl mx-auto px-4 py-4">
                <!-- Top Controls Area - Using Flexbox for layout -->
                <div class="flex flex-col lg:flex-row gap-4 mb-4">
                    <!-- Left Side - Proxy Input -->
                    <div class="w-full lg:w-1/3">
                        <div class="space-y-3">
                            <div class="flex justify-between items-center">
                                <label class="block text-sm font-medium text-gray-300">
                                    <i class="fas fa-server mr-2"></i>Proxy List (ip:port:username:password)
                                </label>
                                <button id="deleteBtn"
                                    class="bg-red-600 hover:bg-red-700 text-white font-medium py-1 px-3 rounded-lg transition-colors duration-200 text-sm flex items-center justify-center">
                                    <i class="fas fa-trash-alt mr-2"></i>Delete
                                </button>
                            </div>
                            <textarea id="proxyInput"
                                class="w-full bg-dark-700 border border-dark-500 rounded-lg px-3 py-2 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"
                                placeholder="192.168.1.1:8080:user:pass&#10;10.0.0.1:8080:user:pass"
                                rows="6"></textarea>
                        </div>
                    </div>

                    <!-- Right Side - Action Controls -->
                    <div class="w-full lg:w-2/3">
                        <!-- Top Row - Proxy Type and Check Button -->
                        <div class="grid grid-cols-2 gap-4 mb-4">
                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-gray-300 mb-2">
                                    <i class="fas fa-exchange-alt mr-2"></i>Proxy Type
                                </label>
                                <select id="proxyTypeSelect"
                                    class="w-full bg-dark-700 border border-dark-500 rounded-lg px-3 py-2 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                    <option value="auto">Auto Detect</option>
                                    <option value="https">HTTPS</option>
                                    <option value="socks5">SOCKS5</option>
                                </select>
                            </div>

                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-gray-300 mb-2">
                                    <i class="fas fa-check-circle mr-2"></i>Check Proxies
                                </label>
                                <button id="checkProxiesBtn"
                                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center">
                                    <i class="fas fa-play mr-2"></i>Check Now
                                </button>
                            </div>
                        </div>

                        <!-- Bottom Row - Copy Buttons -->
                        <div class="grid grid-cols-2 gap-4">
                            <button id="copyIpBtn"
                                class="bg-yellow-600 hover:bg-yellow-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center">
                                <i class="fas fa-copy mr-2"></i>Copy Selected IPs
                            </button>

                            <button id="copyFullProxyBtn"
                                class="bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center">
                                <i class="fas fa-copy mr-2"></i>Copy Full Proxies
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Scrollable Table Area -->
        <%- include('partials/table', {
            tableTitle: 'Proxy Status',
            headers: ['IP', 'Port', 'Username', 'Password', 'Type', 'Status'],
            emptyMessage: 'No proxies to check. Enter your proxies and click "Check Now".',
            showActions: false,
            extraContent: `
                <!-- Selection Buttons Container (appears when table has data) -->
                <div id="selectionButtons" class="selection-buttons">
                    <div class="flex space-x-4">
                        <button id="selectActiveBtn"
                            class="bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center">
                            <i class="fas fa-check-circle mr-2"></i>Select Active Proxies
                        </button>

                        <button id="selectErrorBtn"
                            class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center">
                            <i class="fas fa-exclamation-circle mr-2"></i>Select Error Proxies
                        </button>
                    </div>
                </div>
            `
        }) %>

        <pre id="response"></pre>
        <!-- Footer -->
        <%- include('partials/footer') %>
    </div>
    <script src="javascript/proxyChecker.js"></script>
</body>

</html>