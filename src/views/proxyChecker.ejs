<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proxy Checker</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        dark: {
                            900: '#0f172a',
                            800: '#1e293b',
                            700: '#334155',
                            600: '#475569'
                        }
                    }
                }
            }
        }
    </script>
    <style>
        .scrollbar-hide::-webkit-scrollbar {
            display: none;
        }
        .scrollbar-hide {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
        .table-container {
            scrollbar-width: thin;
            scrollbar-color: #475569 #0f172a;
        }
        .table-container::-webkit-scrollbar {
            width: 6px;
            height: 6px;
        }
        .table-container::-webkit-scrollbar-track {
            background: #0f172a;
        }
        .table-container::-webkit-scrollbar-thumb {
            background: #475569;
            border-radius: 3px;
        }
        .table-container::-webkit-scrollbar-thumb:hover {
            background: #64748b;
        }

        /* Custom scrollbar for textarea */
        textarea {
            scrollbar-width: thin;
            scrollbar-color: #475569 #1e293b;
        }
        textarea::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        textarea::-webkit-scrollbar-track {
            background: #1e293b;
            border-radius: 4px;
        }
        textarea::-webkit-scrollbar-thumb {
            background: #475569;
            border-radius: 4px;
            border: none;
        }
        textarea::-webkit-scrollbar-thumb:hover {
            background: #64748b;
        }

        /* Navbar styles */
        .navbar {
            background-color: #1e293b;
            border-bottom: 1px solid #334155;
        }
        .nav-link {
            color: #cbd5e1;
            transition: color 0.3s ease;
        }
        .nav-link:hover {
            color: #f8fafc;
        }
        .nav-link.active {
            color: #60a5fa;
            font-weight: 500;
        }
        .nav-link.active:hover {
            color: #93c5fd;
        }

        /* Footer styles */
        .footer {
            background-color: #1e293b;
            border-top: 1px solid #334155;
        }
        .social-icon {
            transition: transform 0.2s ease, color 0.2s ease;
        }
        .social-icon:hover {
            transform: translateY(-3px);
            color: #60a5fa;
        }

        /* Selection buttons container */
        .selection-buttons {
            display: none; /* Hidden by default */
            display: flex;
        }
        .selection-buttons.visible {
            display: flex; /* Show when table has data */
        }
    </style>
</head>
<body class="bg-dark-900 text-white font-sans">
    <!-- Navbar -->
    <nav class="navbar py-3 px-4 sticky top-0 z-50 shadow-md">
        <div class="max-w-7xl mx-auto flex items-center justify-between">
            <!-- Logo and Title -->
            <div class="flex items-center space-x-4">
                <div class="text-blue-500 text-2xl">
                    <i class="fas fa-globe"></i>
                </div>
                <h1 class="text-xl font-bold text-white">Proxy Checker</h1>
            </div>
            
            <!-- Navigation Links -->
            <div class="flex items-center space-x-6">
                <a href="#" class="nav-link active flex items-center">
                    <i class="fas fa-proxy mr-2"></i>Proxy Checker
                </a>
                <a href="#" class="nav-link flex items-center">
                    <i class="fas fa-server mr-2"></i>IP Management
                </a>
                <a href="#" class="nav-link flex items-center">
                    <i class="fas fa-cog mr-2"></i>Settings
                </a>
                <a href="#" class="nav-link flex items-center">
                    <i class="fas fa-chart-bar mr-2"></i>Analytics
                </a>
            </div>
        </div>
    </nav>

    <!-- Status Display -->
    <div id="statusDisplay" class="fixed top-16 right-4 z-50 hidden">
        <div class="bg-green-500 text-white px-4 py-2 rounded-lg shadow-lg">
            <span id="statusMessage"></span>
        </div>
    </div>

    <!-- Main Container -->
    <div class="min-h-screen flex flex-col pt-2">
        <!-- Fixed Top Controls -->
        <div class="bg-dark-800 border-b border-dark-600 sticky top-16 z-40 shadow-lg">
            <div class="max-w-7xl mx-auto px-4 py-4">
                <!-- Top Controls Area - Using Flexbox for layout -->
                <div class="flex flex-col lg:flex-row gap-4 mb-4">
                    <!-- Left Side - Proxy Input -->
                    <div class="w-full lg:w-1/3">
                        <div class="space-y-3">
                            <div class="flex justify-between items-center">
                                <label class="block text-sm font-medium text-gray-300">
                                    <i class="fas fa-server mr-2"></i>Proxy List (ip:port:username:password)
                                </label>
                                <button 
                                    id="deleteBtn"
                                    class="bg-red-600 hover:bg-red-700 text-white font-medium py-1 px-3 rounded-lg transition-colors duration-200 text-sm flex items-center justify-center"
                                >
                                    <i class="fas fa-trash-alt mr-2"></i>Delete
                                </button>
                            </div>
                            <textarea 
                                id="proxyInput" 
                                class="w-full bg-dark-700 border border-dark-500 rounded-lg px-3 py-2 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"
                                placeholder="192.168.1.1:8080:user:pass&#10;10.0.0.1:8080:user:pass"
                                rows="6"
                            ></textarea>
                        </div>
                    </div>
                    
                    <!-- Right Side - Action Controls -->
                    <div class="w-full lg:w-2/3">
                        <!-- Top Row - Proxy Type and Check Button -->
                        <div class="grid grid-cols-2 gap-4 mb-4">
                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-gray-300 mb-1">
                                    <i class="fas fa-exchange-alt mr-2"></i>Proxy Type
                                </label>
                                <select 
                                    id="proxyTypeSelect" 
                                    class="w-full bg-dark-700 border border-dark-500 rounded-lg px-3 py-2 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                >
                                    <option value="auto">Auto Detect</option>
                                    <option value="https">HTTPS</option>
                                    <option value="socks5">SOCKS5</option>
                                </select>
                            </div>
                            
                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-gray-300 mb-1">
                                    <i class="fas fa-check-circle mr-2"></i>Check Proxies
                                </label>
                                <button 
                                    id="checkProxiesBtn"
                                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center"
                                >
                                    <i class="fas fa-play mr-2"></i>Check Now
                                </button>
                            </div>
                        </div>
                        
                        <!-- Bottom Row - Copy Buttons -->
                        <div class="grid grid-cols-2 gap-4">
                            <button 
                                id="copyIpBtn"
                                class="bg-yellow-600 hover:bg-yellow-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center"
                            >
                                <i class="fas fa-copy mr-2"></i>Copy Selected IPs
                            </button>

                            <button 
                                id="copyFullProxyBtn"
                                class="bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center"
                            >
                                <i class="fas fa-copy mr-2"></i>Copy Full Proxies
                            </button>
                        </div>
                        
                        <!-- Selected Count -->
                        <div class="text-xs text-gray-400 text-right mt-3">
                            Selected: <span id="selectedCount">0</span> proxies
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Scrollable Table Area -->
        <div class="flex-1 overflow-hidden">
            <div class="max-w-7xl mx-auto px-4 py-6">
                <div class="bg-dark-800 rounded-lg shadow-lg overflow-hidden">
                    <!-- Table Header -->
                    <div class="bg-dark-700 px-4 py-3 border-b-[5px] border-dark-600 sticky top-0 z-30">
                        <div class="flex items-center justify-between">
                            <h2 class="text-lg font-semibold text-gray-200">
                                <i class="fas fa-table mr-2"></i>Proxy Status
                            </h2>
                            <!-- Selection Buttons Container (appears when table has data) -->
                            <div id="selectionButtons" class="selection-buttons">
                                <div class="flex space-x-4">
                                    <button 
                                        id="selectActiveBtn"
                                        class="bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center"
                                    >
                                        <i class="fas fa-check-circle mr-2"></i>Select Active Proxies
                                    </button>

                                    <button 
                                        id="selectErrorBtn"
                                        class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center"
                                    >
                                        <i class="fas fa-exclamation-circle mr-2"></i>Select Error Proxies
                                    </button>
                                </div>
                            </div>
                            <div class="flex items-center space-x-2">
                                <span class="text-sm text-gray-400">Total: <span id="totalCount">0</span> proxies</span>
                                <button 
                                    id="refreshBtn"
                                    class="bg-blue-600 hover:bg-blue-700 text-white p-2 rounded-lg transition-colors duration-200"
                                >
                                    <i class="fas fa-sync-alt"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Table Container -->
                    <div class="table-container">
                        <table class="w-full">
                            <thead class="bg-dark-700 sticky top-0 z-20">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                                        <input 
                                            type="checkbox" 
                                            id="selectAllCheckbox" 
                                            class="w-4 h-4 bg-dark-600 border-dark-500 rounded focus:ring-blue-500 text-blue-600"
                                        >
                                    </th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">IP</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Port</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Username</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Password</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Type</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Status</th>
                                </tr>
                            </thead>
                            <tbody id="proxyTableBody">
                                <!-- Table rows will be populated by JavaScript -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Empty State -->
                    <div id="emptyState" class="py-12 text-center">
                        <i class="fas fa-proxy text-4xl text-gray-500 mb-4"></i>
                        <p class="text-gray-400">No proxies to check. Enter your proxies and click "Check Now".</p>
                    </div>
                </div>
            </div>
        </div>

        <pre id="response"></pre>
        
        <!-- Footer -->
        <footer class="footer py-4 mt-6">
            <div class="max-w-7xl mx-auto px-4">
                <div class="flex flex-col md:flex-row justify-between items-center">
                    <!-- Business Information -->
                    <div class="flex items-center mb-4 md:mb-0">
                        <div class="text-blue-500 text-2xl mr-3">
                            <i class="fas fa-building"></i>
                        </div>
                        <div>
                            <div class="text-lg font-semibold text-white">1mcloud</div>
                            <div class="text-sm text-gray-400">Professional Proxy Solutions</div>
                        </div>
                    </div>
                    
                    <!-- Social Media Links -->
                    <div class="flex space-x-6">
                        <a href="#" class="social-icon text-gray-400 hover:text-blue-500" title="Telegram: name1">
                            <i class="fab fa-telegram text-xl"></i>
                            <span class="ml-2 text-sm text-gray-300">name1</span>
                        </a>
                        <a href="#" class="social-icon text-gray-400 hover:text-blue-600" title="Facebook: name2">
                            <i class="fab fa-facebook text-xl"></i>
                            <span class="ml-2 text-sm text-gray-300">name2</span>
                        </a>
                        <a href="#" class="social-icon text-gray-400 hover:text-green-500" title="Zalo: name3">
                            <i class="fas fa-comment text-xl"></i>
                            <span class="ml-2 text-sm text-gray-300">name3</span>
                        </a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="javascript/proxyChecker.js"></script>
</body>
</html>