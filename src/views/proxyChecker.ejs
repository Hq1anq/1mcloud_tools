<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proxy Checker</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body class="bg-body text-text-primary text-xs sm:text-base font-sans scrollbar-dark">
    <!-- Navbar -->
    <%- include('partials/navbar', { currentPage: 'Proxy Checker' }) %>
    <!-- Status Display -->
    <%- include('partials/toaster') %>

    <!-- Main Container -->
    <div class="min-h-screen flex flex-col pt-2">
        <!-- Fixed Top Controls -->
        <div class="bg-surface border-b border-border top-16 z-40 shadow-lg">
            <div class="max-w-7xl mx-auto px-4 py-2">
                <!-- Top Controls Area -->
                <div class="bg-wrapper rounded-lg p-4 pb-2">
                    <div class="flex flex-col lg:flex-row gap-3 sm:gap-4">
                        <!-- Left Side - Proxy Input -->
                        <div class="w-full lg:w-1/2">
                            <div class="space-y-3">
                                <div class="flex justify-between items-center">
                                    <label class="block text-text-secondary text-sm font-medium">
                                        <i class="fas fa-server mr-2"></i>
                                        Proxy List (ip:port:username:password)
                                    </label>
                                    <button id="deleteBtn"
                                        class="bg-red-600 hover:brightness-90 font-medium py-1 px-3 rounded-lg text-sm flex items-center justify-center">
                                        <i class="fas fa-trash-alt mr-2"></i>
                                        Delete
                                    </button>
                                </div>
                                <textarea id="proxyInput" class="scrollbar-dark"
                                    placeholder="192.168.1.1:8080:user:pass&#10;10.0.0.1:8080:user:pass"
                                    rows="6"></textarea>
                            </div>
                        </div>

                        <!-- Right Side - Action Controls -->
                        <div class="flex flex-col justify-center gap-3 sm:gap-4 w-full lg:w-1/2 mt:0 sm:mt-8">
                            <!-- Top Row - Proxy Type and Check Button -->
                            <div class="flex mb-0">
                                <div class="flex-2/3">
                                    <label class="block text-text-secondary text-sm font-medium mb-2">
                                        <i class="fas fa-check-circle mr-2"></i>
                                        Check Proxies
                                    </label>
                                    <button id="checkProxiesBtn"
                                        class="w-full bg-orange-600 hover:brightness-90 font-bold py-2 px-4 rounded-l-lg flex items-center justify-center">
                                        <i class="fas fa-play mr-2"></i>
                                        Check Now
                                    </button>
                                </div>
                                <div class="flex-1/3">
                                    <label class="block text-text-secondary text-sm font-medium mb-2">
                                        <i class="fas fa-exchange-alt mr-2"></i>
                                        Proxy Type
                                    </label>
                                    <%- include('partials/dropDown', {
                                        dropdownId: 'proxyTypeSelect',
                                        dropdownOptions: ['AUTO DETECT', 'HTTPS', 'SOCKS5'],
                                        defaultOption: 'AUTO DETECT'
                                    }) %>
                                </div>
                            </div>

                            <!-- Copy Buttons -->
                            <div class="flex">
                                <button id="copyIpBtn"
                                    class="flex-1 bg-sky-600 hover:brightness-90 font-medium py-3 px-4 rounded-l-xl flex items-center justify-center">
                                    <i class="fas fa-copy mr-2"></i>
                                    Copy IPs
                                </button>

                                <button id="copyFullProxyBtn"
                                    class="flex-1 bg-violet-600 hover:brightness-90 font-medium py-3 px-4 rounded-r-xl flex items-center justify-center">
                                    <i class="fas fa-copy mr-2"></i>
                                    Copy Full Proxies
                                </button>
                            </div>
                            
                            <!-- Selection buttons-->
                            <div class="flex">
                                <button id="selectActiveBtn"
                                    class="flex-1 bg-green-600 hover:brightness-90 text-nowrap font-medium py-3 px-4 rounded-l-xl flex items-center justify-center">
                                    <i class="fas fa-check-circle mr-2"></i>
                                    Select Active Proxies
                                </button>

                                <button id="selectErrorBtn"
                                    class="flex-1 bg-red-600 hover:brightness-90 text-nowrap font-medium py-3 px-4 rounded-r-xl flex items-center justify-center">
                                    <i class="fas fa-exclamation-circle mr-2"></i>
                                    Select Error Proxies
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

