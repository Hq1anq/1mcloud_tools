<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IP Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body class="bg-body text-text-primary text-xs sm:text-base font-sans scrollbar-dark">
    <!-- Navbar -->
    <%- include('partials/navbar', { currentPage: 'Proxy Manager' }) %>
    <!-- Status Display -->
    <%- include('partials/toaster') %>

    <!-- Main Container -->
    <div class="min-h-screen flex flex-col pt-2">
        <!-- ========== TOP CONTROLS ========== -->
        <div class="bg-surface border-b border-border top-0 z-40 shadow-lg">
            <div class="max-w-7xl mx-auto px-4 py-2">
                <!-- ========== FEATURE CONTROLS ========== -->
                <div class="bg-wrapper rounded-lg p-4">
                    <h3 class="text-text-secondary text-lg font-semibold mb-3">
                        <i class="fas fa-cogs mr-2"></i>Actions
                    </h3>
                    <div class="flex flex-col sm:flex-row gap-4">
                        <!-- IPs Input -->
                        <div class="sm:w-1/2 relative flex flex-col">
                            <div class="flex justify-between items-center">
                                <label class="block text-text-secondary font-medium mb-2">
                                    <i class="fas fa-server mr-2"></i>
                                    Enter IPs (one per line)
                                </label>
                                <button id="shuffleBtn"
                                    class="bg-red-600 hover:brightness-90 font-medium py-1 px-3 mb-1 rounded-lg transition-colors duration-200 text-sm flex items-center justify-center">
                                    <i class="fas fa-sync mr-2"></i>
                                    Shuffle
                                </button>
                            </div>
                            <button id="textCopyBtn" class="group absolute top-8 right-1 text-text-muted hover:brightness-[var(--highlight-brightness)] rounded-lg inline-flex items-center justify-center cursor-pointer">
                                <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="none" viewBox="0 0 24 24">
                                    <path stroke="currentColor" class="text-text-muted group-hover:brightness-[var(--highlight-brightness)]" stroke-linejoin="round" stroke-width="2" d="M9 8v3a1 1 0 0 1-1 1H5m11 4h2a1 1 0 0 0 1-1V5a1 1 0 0 0-1-1h-7a1 1 0 0 0-1 1v1m4 3v10a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1v-7.13a1 1 0 0 1 .24-.65L7.7 8.35A1 1 0 0 1 8.46 8H13a1 1 0 0 1 1 1Z"/>
                                </svg>
                                Copy
                            </button>
                            <textarea id="ip-list" class="flex-grow min-h-[6rem] scrollbar-dark"
                                placeholder="192.168.1.1&#10;10.0.0.1&#10;172.16.0.1"></textarea>
                        </div>
                        <!-- GetData & Change Note & Reinstall and Simple Action Buttons -->
                        <div class="flex flex-col space-y-4 w-full">
                            <!-- Getdata & Change Note & Reinstall (top) -->
                            <div class="flex gap-4">
                                <!-- Get Data -->
                                <div class="space-y-1">
                                    <input type="number" id="amount"
                                        placeholder="Enter amount" min="0">
                                    <div class="flex items-center">
                                        <button id="getDataBtn"
                                            class="flex-1 bg-blue-600 hover:brightness-90 font-medium py-2 px-3 rounded-lg transition-colors duration-200 flex items-center justify-center">
                                            <i class="fas fa-download mr-2"></i>
                                            Get Data
                                        </button>
                                    </div>
                                </div>

                                <!-- Change Note -->
                                <div class="space-y-1 flex-1">
                                    <input type="text" id="noteInput"
                                        placeholder="Enter note">
                                    <div class="flex items-center space-x-2">
                                        <button id="changeNoteBtn"
                                            class="flex-1 bg-purple-600 hover:brightness-90 text-nowrap font-medium py-2 px-3 rounded-lg transition-colors duration-200 flex items-center justify-center">
                                            <i class="fas fa-edit mr-2"></i>
                                            Change Note
                                        </button>
                                        <div class="flex items-center ml-2">
                                            <label class="inline-flex items-center cursor-pointer select-none group">
                                                <!-- Hidden native checkbox -->
                                                <input id="replaceCheckbox" type="checkbox" class="sr-only" />

                                                <!-- Custom box -->
                                                <span class="w-5 h-5 text-text-secondary flex items-center justify-center rounded border border-border
                                                            bg-checkbox transition-all duration-200
                                                            group-hover:border-border-checkbox-hover relative overflow-visible">
                                                    <!-- Big check -->
                                                    <svg class="w-5 h-5 opacity-0 scale-75 transition-all duration-200
                                                                group-has-[input:checked]:opacity-100 group-has-[input:checked]:scale-100 absolute"
                                                        viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                                                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                                                    </svg>
                                                </span>

                                                <!-- Text -->
                                                <span class="text-text-secondary text-sm ml-2">
                                                    Replace
                                                </span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="flex flex-col sm:flex-row gap-4">
                                <!-- Reinstall -->
                                <div class="space-y-1 flex-1">
                                    <input type="text" id="reinstallInput"
                                        placeholder="port:username:password">
                                    <div class="flex">
                                        <button id="reinstallBtn"
                                            class="flex-1 bg-orange-600 hover:brightness-90 font-medium py-2 px-3 rounded-l-lg transition-colors duration-200 flex items-center justify-center">
                                            <i class="fas fa-sync-alt mr-2"></i>
                                            Reinstall
                                        </button>
                                        <%- include('partials/dropDown', {
                                            dropdownId: 'reinstallType',
                                            dropdownOptions: ['HTTPS', 'SOCKS5'],
                                            defaultOption: 'HTTPS'
                                        }) %>
                                    </div>
                                </div>

                                <!-- ChangeIP -->
                                <div class="space-y-1 flex-1">
                                    <input type="text" id="changeIpInput"
                                        placeholder="ip:port:username:password">
                                    <div class="flex">
                                        <button id="changeIpBtn"
                                            class="flex-1 bg-green-600 hover:brightness-90 text-nowrap font-medium py-2 px-3 rounded-l-lg transition-colors duration-200 flex items-center justify-center">
                                            <i class="fas fa-exchange-alt mr-2"></i>
                                            Change IP
                                        </button>
                                        <%- include('partials/dropDown', {
                                            dropdownId: 'changeIpType',
                                            dropdownOptions: ['HTTPS', 'SOCKS5'],
                                            defaultOption: 'HTTPS'
                                        }) %>
                                    </div>
                                </div>
                            </div>
                            <!-- Simple Action Buttons (bottom) -->
                            <div class="grid grid-cols-4 gap-3">
                                <button id="copyIpBtn"
                                    class="bg-yellow-600 hover:brightness-90 text-nowrap font-medium py-2 px-3 rounded-lg transition-colors duration-200 flex items-center justify-center">
                                    <i class="fas fa-copy mr-2"></i>
                                    Copy IP
                                </button>
                                <button id="rebootBtn"
                                    class="bg-gray-500 hover:brightness-90 font-medium py-2 px-3 rounded-lg flex items-center justify-center">
                                    <!-- Uploaded to: SVG Repo, www.svgrepo.com, Generator: SVG Repo Mixer Tools -->
                                    <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-1 sm:mr-2 flex-shrink-0" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" version="1.1">
                                    <g style="fill:none; stroke:var(--text-primary); stroke-width:12px; stroke-linecap:round; stroke-linejoin:round;">
                                        <path d="m 50,10 0,35"/>
                                        <path d="M 20,29 C 4,52 15,90 50,90 85,90 100,47 74,20"/>
                                    </g>
                                    <path style="fill:var(--text-primary)" d="m 2,21 29,-2 2,29"/>
                                    </svg>
                                    Reboot
                                </button>
                                <button id="pauseBtn"
                                    class="bg-red-600 hover:brightness-90 font-medium py-2 px-3 rounded-lg transition-colors duration-200 flex items-center justify-center">
                                    <i class="fas fa-pause mr-2"></i>
                                    Pause
                                </button>
                                <button id="refundBtn"
                                    class="bg-pink-600 hover:brightness-90 font-medium py-2 px-3 rounded-lg transition-colors duration-200 flex items-center justify-center">
                                    <i class="fas fa-undo mr-2"></i>
                                    Refund
                                </button>
                            </div>
                            <input type="password" id="api-key"
                                placeholder="Enter API Key">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Scrollable Table Area -->
        <%- include('partials/table', {
            tableTitle: 'Proxy Manager',
            headers: ['sid', 'ip:port', 'country', 'type', 'from', 'to', 'changed', 'status', 'note'],
            data: [],
            showActions: false,
            emptyMessage: `
                <i class="fas fa-server text-4xl text-text-muted mb-4"></i>
                <p class="text-text-muted">
                    No data available. Click "Get Data" to load information.
                </p>
            `,
        }) %>

        <!-- Copy dialog modal -->
        <%- include('partials/copyDialog' ) %>
    </div>
    <!-- Footer -->
    <%- include('partials/footer') %>
    <script type="module" src="javascript/proxyManager.js"></script>
</body>
</html>
