<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IP Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body class="bg-dark-900 text-white text-xs sm:text-base font-sans scrollbar-dark">
    <!-- Navbar -->
    <%- include('partials/navbar', { currentPage: 'Proxy Manager' }) %>
    <!-- Status Display -->
    <%- include('partials/toaster') %>

    <!-- Main Container -->
    <div class="min-h-screen flex flex-col pt-2">
        <!-- ========== FIXED TOP CONTROLS ========== -->
        <div class="bg-dark-800 border-b border-dark-600 top-0 z-40 shadow-lg">
            <div class="max-w-7xl mx-auto px-4 py-2">
                <!-- ========== FEATURE CONTROLS ========== -->
                <div class="bg-dark-700 rounded-lg p-4">
                    <h3 class="text-lg font-semibold mb-3 text-gray-200">
                        <i class="fas fa-cogs mr-2"></i>Actions
                    </h3>
                    <div class="flex flex-col sm:flex-row gap-4">
                        <!-- IPs Input -->
                        <div class="sm:w-1/2 flex flex-col">
                            <div class="flex justify-between items-center">
                                <label class="block font-medium text-gray-300 mb-2">
                                    <i class="fas fa-server mr-2"></i>Enter IPs (one per line)
                                </label>
                                <button id="shuffleBtn"
                                    class="bg-red-600 hover:bg-red-700 font-medium py-1 px-3 mb-1 rounded-lg transition-colors duration-200 text-sm flex items-center justify-center">
                                    <i class="fas fa-sync mr-2"></i>Shuffle
                                </button>
                            </div>
                            <textarea id="ip-list" class="flex-grow min-h-[6rem] scrollbar-dark"
                                placeholder="192.168.1.1&#10;10.0.0.1&#10;172.16.0.1"></textarea>
                        </div>
                        <!-- GetData & Change Note & Reinstall and Simple Action Buttons -->
                        <div class="flex flex-col space-y-4 w-full">
                            <!-- Getdata & Change Note & Reinstall (top) -->
                            <div class="flex flex-col sm:flex-row gap-4">
                                <!-- Get Data -->
                                <div class="space-y-2">
                                    <input type="number" id="amount"
                                        placeholder="Enter amount" min="0">
                                    <div class="flex items-center">
                                        <button id="getDataBtn"
                                            class="flex-1 bg-blue-600 hover:bg-blue-700 font-medium py-2 px-3 rounded-lg transition-colors duration-200 flex items-center justify-center">
                                            <i class="fas fa-download mr-2"></i>Get Data
                                        </button>
                                    </div>
                                </div>
                                <div class="flex flex-1 gap-4">
                                    <!-- Change Note -->
                                    <div class="space-y-2 flex-1">
                                        <input type="text" id="noteInput"
                                            placeholder="Enter note">
                                        <div class="flex items-center space-x-2">
                                            <button id="changeNoteBtn"
                                                class="flex-1 bg-purple-600 hover:bg-purple-700 text-nowrap font-medium py-2 px-3 rounded-lg transition-colors duration-200 flex items-center justify-center">
                                                <i class="fas fa-edit mr-2"></i>Change Note
                                            </button>
                                            <div class="flex items-center ml-2">
                                                <input type="checkbox" id="replaceCheckbox"
                                                    class="w-4 h-4 bg-dark-600 border-dark-500 rounded focus:ring-blue-500">
                                                <label for="replaceCheckbox"
                                                    class="ml-2 text-sm text-gray-300">Replace?</label>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Reinstall -->
                                    <div class="space-y-2">
                                        <input type="text" id="reinstallInput"
                                            placeholder="port:username:password">
                                        <button id="reinstallBtn"
                                            class="w-full bg-orange-600 hover:bg-orange-700 font-medium py-2 px-3 rounded-lg transition-colors duration-200 flex items-center justify-center">
                                            <i class="fas fa-sync-alt mr-2"></i>Reinstall
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <!-- Simple Action Buttons (bottom) -->
                            <div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
                                <button id="changeIpBtn"
                                    class="bg-green-600 hover:bg-green-700 text-nowrap font-medium py-2 px-3 rounded-lg transition-colors duration-200 flex items-center justify-center">
                                    <i class="fas fa-exchange-alt mr-2"></i>Change IP
                                </button>
                                <button id="copyIpBtn"
                                    class="bg-yellow-600 hover:bg-yellow-700 font-medium py-2 px-3 rounded-lg transition-colors duration-200 flex items-center justify-center">
                                    <i class="fas fa-copy mr-2"></i>Copy IP
                                </button>
                                <button id="pauseBtn"
                                    class="bg-red-600 hover:bg-red-700 font-medium py-2 px-3 rounded-lg transition-colors duration-200 flex items-center justify-center">
                                    <i class="fas fa-pause mr-2"></i>Pause
                                </button>
                                <button id="refundBtn"
                                    class="bg-pink-600 hover:bg-pink-700  font-medium py-2 px-3 rounded-lg transition-colors duration-200 flex items-center justify-center">
                                    <i class="fas fa-undo mr-2"></i>Refund
                                </button>
                            </div>
                            <input type="password" id="api-key"
                                placeholder="Enter API Key">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Scrollable Table Area -->
        <%- include('partials/table', {
            tableTitle: 'Proxy Manager',
            headers: ['sid', 'ip:port', 'country', 'type', 'from', 'to', 'changed', 'status', 'note'],
            data: [],
            showActions: false,
            emptyMessage: `
                <i class="fas fa-server text-4xl text-gray-500 mb-4"></i>
                <p class="text-gray-400">No data available. Click "Get Data" to load information.</p>
            `,
        }) %>

        <!-- Copy dialog modal -->
        <%- include('partials/copyDialog' ) %>
    </div>
    <!-- Footer -->
    <%- include('partials/footer') %>
    <script type="module" src="javascript/proxyManager.js"></script>
</body>
</html>
